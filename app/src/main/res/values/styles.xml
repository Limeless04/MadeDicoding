<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="MainToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Poster">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ItemList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="ItemList.Title">
        <item name="android:layout_toEndOf">@id/cv_poster</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ItemList.Year">
        <item name="android:layout_toEndOf">@id/cv_poster</item>
        <item name="android:layout_below">@id/txt_title</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ItemList.Genre">
        <item name="android:layout_toEndOf">@id/cv_poster</item>
        <item name="android:layout_below">@id/txt_year</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PosterDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">432dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="Item.TitleDetail">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="Item.Score">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Score">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#4E4E4E</item>
        <item name="android:text">@string/score</item>
    </style>

    <style name="Item.Description">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>
